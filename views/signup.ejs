<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
    <style>
        @media (min-width: 1024px) {
            .fixed-latest-blog {
                position: sticky;
                top: 1rem;
            }
        }
    </style>
</head>

<body class=" bg-slate-700">
    <%- include("./partials/nav.ejs") %>
   </header>
    <div class="flex items-center justify-center min-h-screen">
        <div class="bg-white shadow rounded-3xl p-6 sm:p-10 w-full sm:max-w-lg mx-2">
            <div class="text-center">
                <h2 class="text-4xl font-extrabold text-blue-400 mb-6">Create Account</h2>
            </div>
            <form action="/user/signup" method="post">
                <div class="mb-4">
                    <label class="font-semibold text-sm text-gray-600 pb-1 block" for="fullname">FullName</label>
                    <input class="border rounded-lg px-3 py-2 mt-1 text-sm w-full" type="text" name="fullname" id="fullname" />
                </div>
                <div class="mb-4">
                    <label class="font-semibold text-sm text-gray-600 pb-1 block" for="email">E-mail</label>
                    <input class="border rounded-lg px-3 py-2 mt-1 text-sm w-full" type="email" name="email" id="email" />
                </div>
                <div class="mb-6">
                    <label class="font-semibold text-sm text-gray-600 pb-1 block" for="password">Password</label>
                    <input class="border rounded-lg px-3 py-2 mt-1 text-sm w-full" type="password" name="password" id="password" />
                </div>

                <div class="flex flex-col space-y-4">
                 
                    <button type="submit" class="flex items-center justify-center py-2 px-4 bg-blue-400 hover:bg-blue-600 text-white transition ease-in duration-200 text-center text-base font-semibold shadow-md rounded-lg">
                        Create an Account
                    </button>
                </div>
                <div class="text-center mt-4">
                    <span class="text-gray-700">Already have an account?</span>
                    <a href="/user/signin" class="text-blue-600 hover:underline">Login</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
